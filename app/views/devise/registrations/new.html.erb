<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

        <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div>

        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>

        <div class="css-cube">
        <%= image_tag "tokyotower.png", :class=>"css-face css-forward" %>
        <%= image_tag "zao.png", :class=>"css-face css-reverse" %>
        <%= image_tag "miyajima.png", :class=>"css-face css-right" %>
        <%= image_tag "taiyou.png", :class=>"css-face css-left" %>
        <%= image_tag "Mt.fuji.png", :class=>"css-face css-top" %>
        <%= image_tag "shirakawago.png", :class=>"css-face css-bottom" %>
        </div>
      <% end %>
    </div>
  </div>
</div>