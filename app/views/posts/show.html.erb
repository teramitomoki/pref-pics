<div class="subete">
  <main class="main">
    <div class="inner">
      <div class="prototype__wrapper">
        <p class="prototype__hedding">
          <%= @post.title%>
        </p>
        <div class="prototype__user">
        <%= link_to(@user.name,"users/#{@user.id}") %>さん
        </div>
        <% if user_signed_in? && current_user.id == @post.user_id %>
          <div class="prototype__manage">
            <%= link_to "編集する", edit_post_path, class: :prototype__btn %>
            <%= link_to "削除する", post_path(@post.id), method: :delete, class: :prototype__btn %>
          </div>
        <% end %>
        <div class="prototype__image">
          <%= image_tag @post.image %>
        </div>
        <div class="prototype__comments">
            <% if user_signed_in? %>
              <%= form_with model:[@post], local: true do |f|%>
                <div class="field">
                  <%= f.label :concept, "コメント" %><br />
                  <%= f.text_field :concept, id:"comment_content" %>
                </div>
                <div class="actions">
                  <%= f.submit "送信する", class: :form__btn  %>
                </div>
              <% end %>
            <% end %>
        </div>
      </div>
    </div>
  </main>
</div>

